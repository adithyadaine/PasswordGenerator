{
    "manifest_version": 3,
    "name": "Aegis Password Generator",
    "version": "4.1.0",
    "description": "A modern, secure, and feature-rich password generator.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "img/static/icon-16.png",
            "48": "img/static/icon-48.png",
            "128": "img/static/icon-128.png"
        }
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "img/static/icon-16.png",
        "48": "img/static/icon-48.png",
        "128": "img/static/icon-128.png"
    }
}